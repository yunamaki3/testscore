<script>
  // URLから現在のページを取得
  const currentPage = window.location.pathname;
  // .home内のa要素を取得
  const homeLinks = document.querySelector('body .sidepanel .sidemenu .home').getElementsByTagName('a');
  // 現在のページに応じてクラスを追加
  if (currentPage === '/') {
    // 「/」の場合、最初のa要素に「nowpage」クラスを追加
    homeLinks[0].classList.add('nowpage');
  } else if (currentPage === '/login') {
    // 「/login」の場合、2番目のa要素に「nowpage」クラスを追加
    homeLinks[1].classList.add('nowpage');
  }
</script>