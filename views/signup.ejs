<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('head') %> 
</head>
<body class="mainbody">
  <%- include('sidepanel') %>
  <div class="main center">
    <div class="login">
      <h3>新規登録</h3>
      <form action="/signup" method="POST">
        <% if (errors.length>0) { %>
          <div class="error">
            <h3><span class="material-symbols-outlined notifi-icon">report</span>Caution</h3>
            <% errors.forEach (error => { %>
            <p class="errormessage"><%= error %></p>
            <% }); %>
          </div>
        <% } %>
        <p class="guide">登録コード<span class="must">必須</span></p>
        <input class="general-input" type="text" name="code" placeholder="000000">
        <p class="guide">名前<span class="must">必須</span></p>
        <input class="general-input" type="text" name="username" placeholder="雄飛太郎">
        <p class="guide">学校メールアドレス<span class="must">必須</span></p>
        <input class="general-input" type="email" name="email" placeholder="0000000@showa-shuei.ed.jp">
        <p class="guide">パスワード<span class="must">必須</span></p>
        <input class="general-input" type="password" name="password">
        <!-- <button class="general-submit" type="submit"><span class="material-symbols-outlined">login</span>ログイン</button> -->
        <input class="general-submit" type="submit" value="新規登録">
      </form>
    </div>
  </div>
</body>
</html>